<Window x:Class="KorobovGraphEditor1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorobovGraphEditor1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Header="Инструменты">
                <ToggleButton Name="PencilToolButton" 
                              Content="Карандаш"
                              ToolTip="Свободное рисование"
                              Tag="Pencil"/>
                <ToggleButton Name="LineToolButton" 
                              Content="Линия" 
                              ToolTip="Рисование линий"
                              Tag="Line"/>
                <ToggleButton Name="RectangleToolButton" 
                              Content="Прямоугольник" 
                              ToolTip="Рисование прямоугольников"
                              Tag="Rectangle"/>
                <ToggleButton Name="EllipseToolButton" 
                              Content="Эллипс" 
                              ToolTip="Рисование эллипсов"
                              Tag="Ellipse"/>

    <Separator/>
        <Label Content="Цвет:" VerticalAlignment="Center"/>
          <Rectangle Name="CurrentColorPreview" 
          Width="20" 
          Height="20" 
          Stroke="DarkGray" 
          StrokeThickness="1"
          Fill="Black"
          VerticalAlignment="Center"
          Margin="5,0"/>
          <ComboBox Name="ColorComboBox" 
            Width="100"
            SelectionChanged="ColorComboBox_SelectionChanged"
            ToolTip="Выберите цвет"
            VerticalAlignment="Center">
                    <ComboBoxItem Background="Black" Content="Черный" Tag="Black"/>
                    <ComboBoxItem Background="Red" Content="Красный" Tag="Red"/>
                    <ComboBoxItem Background="Blue" Content="Синий" Tag="Blue"/>
                    <ComboBoxItem Background="Green" Content="Зеленый" Tag="Green"/>
                    <ComboBoxItem Background="Yellow" Content="Желтый" Tag="Yellow"/>
                    <ComboBoxItem Background="Purple" Content="Фиолетовый" Tag="Purple"/>
                    <ComboBoxItem Background="Orange" Content="Оранжевый" Tag="Orange"/>
          </ComboBox>

    <Separator/>

                <Button Name="ClearButton" 
                        Content="Очистить" 
                        ToolTip="Очистить холст"
                        Click="ClearButton_Click"/>
                <Button Name="SaveButton" 
                        Content="Сохранить PNG" 
                        ToolTip="Сохранить рисунок в PNG"
                        Click="SaveButton_Click"/>
            </ToolBar>
        </ToolBarTray>

        <Canvas Name="DrawingCanvas" 
                Background="White" 
                Margin="5">
            <Border BorderBrush="LightGray" BorderThickness="1"/>
        </Canvas>

    </DockPanel>
</Window>
